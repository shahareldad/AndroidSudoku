<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gamesart.sudoku.sudoku.BoardActivity">

    <GridLayout
        android:layout_alignParentTop="true"
        android:id="@+id/mainGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="9"
        android:rowCount="9"></GridLayout>

    <com.google.android.gms.ads.AdView
        android:layout_above="@id/gameKeyboard"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
        <!--ads:adUnitId="ca-app-pub-8402023979328526/1506447587">-->
    </com.google.android.gms.ads.AdView>

    <GridLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/gameKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="6"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="1"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="2"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="3"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="0"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="4"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="0"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="5"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="6"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="7"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="8"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="9"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="1"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="Clear"
            android:enabled="false"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="0"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="New Game"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="1"
            android:background="@drawable/keyboard_key"
            android:gravity="center"
            android:text="Reset"
            android:textSize="16dp" />
    </GridLayout>

</RelativeLayout>
